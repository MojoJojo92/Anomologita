<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="MyCustomToolBarTheme" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="colorPrimary">@color/primaryColor</item>+
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="MyCustomTabTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/primaryColorDark</item>
        <item name="android:textColorSecondary">@color/primaryColorDark</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="My.TabText.Style" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:background">@drawable/tabs_background</item>
        <item name="android:textAllCaps">false</item>
        <!-- <item name="android:ellipsize">none</item> -->
        <item name="android:maxLines">1</item>
    </style>

    <style name="My.Favorites.Style" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/tabs_background</item>
        <!-- <item name="android:ellipsize">none</item> -->
        <item name="android:maxLines">1</item>
    </style>


    <style name="My.SubButton.Style.Off" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#008080</item>
        <item name="android:background">@drawable/tabs_background</item>
        <item name="android:textAllCaps">false</item>
        <!-- <item name="android:ellipsize">none</item> -->
        <item name="android:maxLines">1</item>
    </style>

    <style name="My.SubButton.Style.On" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:background">@drawable/tabs_background</item>
        <item name="android:textAllCaps">false</item>
        <!-- <item name="android:ellipsize">none</item> -->
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditTextStyleWhite" parent="android:style/Widget.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/post_background</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat">
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
    </style>

    <style name="PostTheme" parent="Theme.AppCompat">
        <item name="android:background">@drawable/post_background</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="UserPostTheme" parent="Theme.AppCompat">
        <item name="android:background">@drawable/post_background_user</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/primaryColor</item>
    </style>

</resources>
