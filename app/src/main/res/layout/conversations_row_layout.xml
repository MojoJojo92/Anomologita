<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/conRowLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="90dp"
    android:layout_margin="5dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/deleteConversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_delete"/>

    <TextView
        android:id="@+id/lastMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text=" 16:05 "
        android:textColor="@color/secondaryTextColor"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Μέ "
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/senderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ανώνυμο"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" στο "
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/postHashtagName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="(postHashtag)"
            android:textSize="17sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/conLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/lastMessageTime"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lastSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ποιός"
            android:textColor="@color/secondaryTextColor"/>

        <TextView
            android:id="@+id/txtMessageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Last Personal Message"
            android:maxLines="5"
            android:textColor="@color/secondaryTextColor"/>

    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:id="@+id/chatClick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_toLeftOf="@id/deleteConversation"/>

</RelativeLayout>