<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/createGroupLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper_gradient">

    <include
        android:id="@+id/createGroupToolbar"
        layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fakeView2"
        android:layout_below="@+id/createGroupToolbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_background_circle_white_big"/>

        <ImageView
            android:id="@+id/default_group_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_group"
            android:contentDescription="@string/selectImage"/>

        <TextView
            android:id="@+id/setImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:paddingBottom="10dp"
            android:text="@string/add_new_image"
            android:textColor="#008080"/>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fakeView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fakeView2">

        <EditText
            android:id="@+id/groupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fakeView"
            android:layout_alignParentTop="true"
            android:focusable="true"
            android:gravity="center"
            android:hint="Όνομα\n (π.χ Πανεπιστήμιο Μακεδονίας)"
            android:padding="10dp"/>

        <LinearLayout
            android:id="@+id/fakeView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal"/>

        <EditText
            android:id="@+id/groupHashtagName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fakeView"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:hint="Πρώτο  hashtag!\n(π.χ έφαγακεφτέδες)"
            android:padding="10dp"/>

    </RelativeLayout>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/wheel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        wheel:matProg_barColor="@color/primaryColor"
        wheel:matProg_progressIndeterminate="true"/>

</RelativeLayout>