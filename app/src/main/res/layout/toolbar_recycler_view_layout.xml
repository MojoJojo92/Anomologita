<RelativeLayout
    xmlns:mm="http://millennialmedia.com/android/schema"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/backrepeat">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:gravity="center|bottom"
            android:padding="2dp"
            android:shadowColor="@color/white"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="0.006"
            android:text="@string/noNotificationsTop"
            android:textColor="@color/dividerColorDark"
            android:textSize="23sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/titleBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:gravity="top|center"
            android:padding="2dp"
            android:shadowColor="@color/white"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.006"
            android:text="@string/noNotificationsBottom"
            android:textColor="@color/dividerColor"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@android:color/transparent"/>

    <com.millennialmedia.android.MMAdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        mm:width="320"
        mm:apid="204166" />

</RelativeLayout>
